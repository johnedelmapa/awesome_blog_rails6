<% provide(:title, "Users")%>
<h1 class="text-center mt-4">All Users</h1>
<div class="row">
    <% @users.each do |user| %>
        <div class="col-6">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-2">
                            <%= profile_image(user, "profile-medium")%>
                        </div>
                        <div class="col-10">
                            <h6><%= link_to user.name, user_path(user) %></h6>
                            <span><%= user.email %></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>  
    <% end %>
    <div class="pagination justify-content-center mt-4">
        <%= will_paginate @users %>
    </div>
</div>


